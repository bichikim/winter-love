{
  "compileOnSave": false,
  "compilerOptions": {
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],
    "jsx": "preserve",
    "skipLibCheck": true,
    // language environment
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["es2015", "esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@@/*": ["*"],
      "~~/*": ["*"],
      "vue-ts": ["src/vue-ts"],
      "types/*": ["src/types/*"]
    },
    "allowJs": true,
    // build environment
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    // decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //lint
    "strict": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "noEmitHelpers": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "lib/**/*",
    "project/**/*",
    "test/**/*"
  ]
}
